<% if @user %>
	<%= link_to "<-- Back to Profile", user_name_path(@user[:handle])  %>

	<div id="editworks">
	<h3>Edit works</h3>

	<div id="worklist">
		<!-- <h3>Works</h3> -->
		<%= render :partial => "workslist", :locals => {:works => @user.works, :edit => true} %>
	</div>
	<div id="workeditform">
		<%= form_tag({:action => :works}, :method => "post") %>
			<table>
				<tr><th colspan="2">Add Work</th></tr>
				<tr><td>Name:</td><td><%= text_field_tag :name %> </td></tr>
				<tr><td>URL:</td><td><%= text_field_tag :url %> </td></tr>
				<tr><td>Decription:</td><td><%= text_area_tag :description %> </td></tr>
				<tr><td>Tags(comma delimited):</td><td><%= text_field_tag :tags%> </td></tr>
			</table>
			<%= submit_tag "Add" %>
		</form>
	</div>
</div>
<% else %>
	<em>You have come here in error</em>
<% end %>

